# addtasks.kv
<AtasksScreen>:
    BoxLayout:
        canvas.before:
            Color:
                rgba: 1,1,1,1  # Light gray background color
            Rectangle:
                pos: self.pos
                size: self.size
        BoxLayout:
            orientation:'vertical'




            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: None
                spacing:'80dp'
                padding:'10dp'
                canvas.before:
                    Color:
                        rgba: 0.8, 0.8, 0.8, 0.7  # Border color (cool shade)
                    RoundedRectangle:
                        pos: self.x + 5, self.y - 5  # Shift the rectangle for the shadow
                        size: self.width - 10, self.height  # Adjust the size for the shadow
                        radius: [10, 10, 0, 0]  # Adjust the radius to control the shadow's roundness
                Button:
                    background_color:0,0,0,0
                    size_hint_x: None
                    height:'40dp'
                    width: '40dp'
                    on_release: app.root.current = 'feeds'
                    Image:
                        id:my_image
                        source:"images/img_15.png"
                        size:self.parent.size
                        center_x:self.parent.center_x
                        center_y:self.parent.center_y
                Button:
                    background_color:0,0,0,0
                    size_hint_x: None
                    height:'40dp'
                    width: '40dp'
                    on_release: app.root.current = 'home'
                    Image:
                        id:my_image
                        source:"images/img_16.png"
                        size:self.parent.size
                        center_x:self.parent.center_x
                        center_y:self.parent.center_y
                Button:
                    background_color:0,0,0,0
                    size_hint_x: None
                    height:'40dp'
                    width: '40dp'
                    on_release: app.root.current = 'setting'
                    Image:
                        id:my_image
                        source:"images/img_17.png"
                        size:self.parent.size
                        center_x:self.parent.center_x
                        center_y:self.parent.center_y
